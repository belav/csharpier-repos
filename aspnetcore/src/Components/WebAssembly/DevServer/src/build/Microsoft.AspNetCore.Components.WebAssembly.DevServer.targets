<Project>
  <PropertyGroup>
    <_BlazorDevServerDll>$(MSBuildThisFileDirectory)../tools/blazor-devserver.dll</_BlazorDevServerDll>
    <RunCommand>dotnet</RunCommand>
    <_RunExtraArguments Condition="'$(WasmEnableThreads)' == 'true'"
      >--apply-cop-headers</_RunExtraArguments
    >
    <RunArguments>"$(_BlazorDevServerDll)" --applicationpath "$(TargetPath)" $(_RunExtraArguments)</RunArguments>
  </PropertyGroup>
</Project>
