<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <Files Include="Sample.resx" />
  </ItemGroup>
  <Target Name="Main">
    <GenerateResource Sources="@(Files)" OutputResources="@(Files-&gt;'%(Filename).resources')" />
  </Target>
  <Target Name="Clean">
    <Delete Files="@(Files-&gt;'%(Filename).resources')" />
  </Target>
</Project>
